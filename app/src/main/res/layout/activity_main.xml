<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_self_briefing"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_self_brief"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_atis"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_atis"
        app:layout_constraintTop_toBottomOf="@+id/btn_self_briefing" />

    <Button
        android:id="@+id/btn_awos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_awos"
        app:layout_constraintTop_toBottomOf="@+id/btn_atis" />

    <Button
        android:id="@+id/btn_charts"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_charts"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_awos" />

    <Button
        android:id="@+id/btn_gamet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_gamet"
        app:layout_constraintTop_toBottomOf="@+id/btn_charts" />

    <Button
        android:id="@+id/btn_lightnings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_lightning"
        app:layout_constraintTop_toBottomOf="@+id/btn_gamet" />

    <Button
        android:id="@+id/btn_opmet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_opmet"
        app:layout_constraintTop_toBottomOf="@+id/btn_lightnings" />

    <Button
        android:id="@+id/btn_radar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_radar"
        app:layout_constraintTop_toBottomOf="@+id/btn_opmet" />

    <Button
        android:id="@+id/btn_satellite"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_satellite"
        app:layout_constraintTop_toBottomOf="@+id/btn_radar" />

    <Button
        android:id="@+id/btn_schedule"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="@string/btn_txt_schedule"
        app:layout_constraintTop_toBottomOf="@+id/btn_satellite" />

</androidx.constraintlayout.widget.ConstraintLayout>